{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "opencap",
  "version": "0.2.1",
  "identifier": "com.opencap.app",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "shortDescription": "Lightweight, open-source, private screenshot tool",
    "category": "Utility",
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "installerHooks": "nsis/installer-hooks.nsi"
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
